<?xml version='1.0' encoding='utf-8'?>

<scene version="0.5.0">
	<integrator type="volpath">
		<integer name="maxDepth" value="-1"/>
    <!--<integer name="rrDepth" value="8"/>-->
    <boolean name="strictNormals" value="true"/>
    
	</integrator>


	<medium type="heterogeneous" id="smoke">
		<string name="method" value="woodcock"/>

		<volume name="density" type="gridvolume">
			<string name="filename" value="cloud_water_green.vol"/>
			<!--string name="filename" value="cubic_water_green.vol"/-->
			<!--<transform name="toWorld">
				<rotate z="1" angle="180"/>
			</transform>-->
		</volume>
		<float name="scale" value="1"/>
    <!--float name="scale" value="0.36"/-->
		
    <volume name="albedo" type="constvolume">
			<!--rgb name="value" value="0.5"/-->
			<rgb name="value" value="0.0, 0.0, 0.0"/> <!-- for simulations with no scattering bg_sigmaA / cloud_sigmaA /water_sigmaA-->
			<!--rgb name="value" value="0.4706, 0.8333, 0.8571"/-->
		</volume>

		<phase type="hg">
			<float name="g" value="0.9"/>
		</phase>
		<point name="min" x="-0.5" y="-0.5" z="-0.4"/>
		<point name="max" x="0.5" y="0.5" z="0.4"/>
	</medium>
 
  <medium type="heterogeneous" id="cubic">
    <string name="method" value="woodcock"/>
    <volume name="density" type="gridvolume">
      <string name="filename" value="cubic_test.vol"/>
    </volume>

		<volume name="albedo" type="constvolume">
			<rgb name="value" value="0"/>   
		</volume>

		<phase type="hg">
		  <float name="g" value="0"/>
		</phase>
		<point name="min" x="-0.5" y="-0.5" z="-0.4"/>
		<point name="max" x="0.5" y="0.5" z="0.4"/>
  </medium>

	<medium type="homogeneous" id="underwater">
		<!--rgb name="sigmaS" value="0.4, 0.3, 0.3"/--> 
		<rgb name="sigmaS" value="0.0, 0.0, 0.0"/>   <!-- for simulations with no scattering bg_sigmaA / cloud_sigmaA /water_sigmaA-->
		<rgb name="sigmaA" value="0.45, 0.06, 0.05"/>

		<phase type="hg">
			<float name="g" value="0.9"/>
		</phase>
		<!--<float name="scale" value="0.5"/> -->
		<!--point name="min" x="-25" y="-10" z="-10"/-->
		<!--point name="max" x="25" y="10" z="10"/-->
	</medium>
 
 
 	<medium type="homogeneous" id="vacuum">
		<rgb name="sigmaS" value="0 , 0 , 0 "/>
		<rgb name="sigmaA" value="0 , 0 , 0 "/>

		<phase type="hg">
			<float name="g" value="0 "/>
    </phase> 
     
    <!--point name="min" x="-25" y="-10" z="-10"/-->
		<!--point name="max" x="25" y="10" z="10"/-->
	</medium>

  <shape type="obj" id="aquarium">
		<string name="filename" value="bounds_large_wide_int_diff.obj"/>
		<transform name="toWorld">
			<translate x="0" y="0" z="0"/>
		</transform>

	  <ref name="interior" id="underwater"/>
	  <!--ref name="exterior" id="underwater"/-->
	  <ref name="exterior" id="smoke"/>
   	<!--ref name="exterior" id="cubic"/-->
   	<!--ref name="interior" id="vacuum"/-->
   	<!--ref name="exterior" id="vacuum"/-->
    
    <bsdf type="dielectric">
      <!--float name="intIOR" value="1.0"/>
      <float name="extIOR" value="1.0"/-->
      <!--string name="intIOR" value="vacuum"/>
      <string name="extIOR" value="vacuum"/-->
      <string name="intIOR" value="water"/>
      <string name="extIOR" value="water"/>
    </bsdf>
    
	</shape>
 
 

 <!--
 	<shape name="screen" type="obj">
		<string name="filename" value="extraWideScreen.obj"/>

		<bsdf type="diffuse">
			<spectrum name="spectrumProperty" value="0.78" intent="reflectance"/>
		</bsdf>

		<emitter type="area">
			<spectrum name="radiance" value="1"/>
		</emitter>
		<transform name="toWorld">
			<translate z="2"/>
		</transform>
	</shape> 
-->

<sensor type="perspective">
		<float name="fov" value="28.0725"/>
		<string name="fovAxis" value="y"/>
		<transform name="toWorld">

			<lookat target="0, 0, 0" origin="-2.1213, -1.5, 2.1213" up="0, -1, 0"/>
		</transform>

		<sampler type="ldsampler">
			<integer name="sampleCount" value="64"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="height" value="400"/>
			<integer name="width" value="400"/>

			<rfilter type="gaussian"/>
		</film>

		<ref id="underwater"/>
	</sensor>
</scene>
